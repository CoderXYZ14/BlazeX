{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src", // Your source files are in the src folder
    "outDir": "./dist", // Compiled files should go into the dist folder
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts" // Ensure all TypeScript files are included
  ],
  "exclude": [
    "node_modules" // Exclude node_modules folder
  ]
}
